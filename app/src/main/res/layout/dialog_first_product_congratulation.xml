<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/backgroundOverlay"
    android:background="#80000000">

    <!-- Container pour les particules de célébration -->
    <com.dedoware.shoopt.ui.effects.CelebrationParticleView
        android:id="@+id/celebrationParticles"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Container pour les confettis (keepé pour compatibilité) -->
    <FrameLayout
        android:id="@+id/confettiContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Carte principale de félicitation avec design moderne -->
    <androidx.cardview.widget.CardView
        android:id="@+id/congratsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        android:background="@drawable/celebration_card_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="40dp"
            android:gravity="center_horizontal"
            android:background="@drawable/celebration_card_background">

            <!-- Container pour l'icône avec effet de brillance -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="32dp">

                <!-- Cercle de fond avec gradient -->
                <View
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/trophy_background_circle" />

                <!-- Icône du trophée avec effet de brillance -->
                <ImageView
                    android:id="@+id/trophyIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_trophy_gold"
                    android:contentDescription="@string/trophy_icon_description" />

                <!-- Effet de brillance par-dessus -->
                <com.shoopt.app.utils.ShineEffectView
                    android:id="@+id/shineEffect"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center" />

            </FrameLayout>

            <!-- Titre de félicitation avec style moderne -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/first_product_congrats_title"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/celebration_primary_text"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02" />

            <!-- Sous-titre encourageant -->
            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/first_product_congrats_subtitle"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/celebration_accent"
                android:gravity="center"
                android:fontFamily="sans-serif" />

            <!-- Message de félicitation -->
            <TextView
                android:id="@+id/messageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="@string/first_product_congrats_message"
                android:textSize="16sp"
                android:textColor="@color/celebration_secondary_text"
                android:gravity="center"
                android:lineSpacingExtra="6dp"
                android:fontFamily="sans-serif"
                android:alpha="0.9" />

            <!-- Statistique encourageante -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/stats_badge_background"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_trending_up"
                    android:tint="@color/celebration_accent" />

                <TextView
                    android:id="@+id/statsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_product_stats_message"
                    android:textSize="14sp"
                    android:textColor="@color/celebration_accent"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Bouton pour continuer avec design moderne -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/continueButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/continue_shopping"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:cornerRadius="28dp"
                app:backgroundTint="@color/celebration_button_background"
                android:textColor="@android:color/white"
                app:rippleColor="@color/celebration_button_ripple"
                app:strokeWidth="0dp"
                android:elevation="4dp"
                app:icon="@drawable/ic_arrow_forward"
                app:iconGravity="end"
                app:iconSize="20dp"
                app:iconTint="@android:color/white" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
