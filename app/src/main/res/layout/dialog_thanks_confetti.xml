<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/rounded_dialog_background">

    <com.dedoware.shoopt.activities.ConfettiView
        android:id="@+id/confetti_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/thanks_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/support_thanks"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/thanks_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/support_thanks_close"
        android:background="@drawable/main_rounded_button"
        android:minHeight="44dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

</LinearLayout>
