<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?backgroundColor"
    android:fitsSystemWindows="true"
    tools:context=".activities.SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?backgroundColor">

        <ImageButton
            android:id="@+id/back_IB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:background="@null"
            android:contentDescription="@string/back"
            android:src="@drawable/shoopt_back" />

        <TextView
            android:id="@+id/theme_title_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/back_IB"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/theme_settings"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/theme_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/theme_title_TV"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/theme_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/theme_light" />

            <RadioButton
                android:id="@+id/theme_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/theme_dark" />

            <RadioButton
                android:id="@+id/theme_system"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/theme_system" />
        </RadioGroup>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/theme_radio_group"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp"
            android:background="#CCCCCC" />

        <TextView
            android:id="@+id/currency_title_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/currency_settings"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/currency_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/currency_title_TV"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:minHeight="48dp" />

        <!-- Section Onboarding -->
        <View
            android:id="@+id/onboarding_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/currency_spinner"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp"
            android:background="#CCCCCC" />

        <TextView
            android:id="@+id/onboarding_title_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/onboarding_divider"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:text="@string/replay_onboarding"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/onboarding_description_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/onboarding_title_TV"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="20dp"
            android:text="@string/replay_onboarding_description"
            android:textSize="14sp"
            android:alpha="0.7" />

        <!-- Carte pour l'option onboarding -->
        <androidx.cardview.widget.CardView
            android:id="@+id/replay_onboarding_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/onboarding_description_TV"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Icône -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_replay"
                    android:background="@drawable/onboarding_icon_background"
                    android:padding="12dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/replay_onboarding" />

                <!-- Contenu textuel -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/replay_onboarding"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/replay_onboarding_description"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>

                <!-- Flèche -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_forward"
                    android:layout_marginStart="12dp"
                    android:contentDescription="@string/replay_onboarding"
                    android:alpha="0.6" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Nouvelle carte pour le guide d'ajout de premier produit -->
        <androidx.cardview.widget.CardView
            android:id="@+id/replay_first_product_guide_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/replay_onboarding_card"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Icône avec la mascotte -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/loading_logo_animation"
                    android:background="@drawable/guide_icon_background"
                    android:padding="8dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/replay_product_guide" />

                <!-- Contenu textuel -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/replay_product_guide"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/replay_product_guide_description"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>

                <!-- Badge "Nouveau" (optionnel, pour attirer l'attention) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_badge"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/new_badge_background"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <!-- Flèche -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_forward"
                    android:layout_marginStart="8dp"
                    android:contentDescription="@string/replay_product_guide"
                    android:alpha="0.6" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/save_settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/replay_first_product_guide_card"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:background="@drawable/main_rounded_button"
            android:contentDescription="@string/save_settings"
            android:padding="15dp"
            android:src="@drawable/ic_save" />

        <TextView
            android:id="@+id/save_settings_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/save_settings_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:text="@string/save_settings"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>
