<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.UpdateShoppingListActivity">

    <!-- Background gradient - consistent with other screens -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_gradient_background" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/update_shopping_list_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/screen_padding"
            android:paddingBottom="@dimen/fab_bottom_margin">

            <!-- Top Bar with back button - Responsive sizing -->
            <LinearLayout
                android:id="@+id/top_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_large"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/back_IB"
                    android:layout_width="@dimen/back_button_size"
                    android:layout_height="@dimen/back_button_size"
                    app:icon="@drawable/shoopt_back"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="@dimen/icon_size_medium"
                    app:cornerRadius="21dp"
                    app:strokeColor="@color/back_button_stroke"
                    app:strokeWidth="1dp"
                    app:iconTint="@color/back_button_icon"
                    android:backgroundTint="@color/back_button_background"
                    app:rippleColor="@color/back_button_ripple"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:contentDescription="@string/back" />

                <TextView
                    android:id="@+id/screen_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/update_shopping_list"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_xlarge"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginHorizontal="@dimen/margin_medium"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="@dimen/title_text_min"
                    android:autoSizeMaxTextSize="@dimen/title_text_max"
                    android:maxLines="2" />

                <!-- Empty cart button for easy access - Responsive sizing -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/empty_main_list_IB"
                    android:layout_width="@dimen/action_button_size"
                    android:layout_height="@dimen/action_button_size"
                    app:icon="@drawable/shoopt_empty_cart"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="@dimen/icon_size_small"
                    app:cornerRadius="21dp"
                    app:strokeColor="#FF5722"
                    app:strokeWidth="1dp"
                    app:iconTint="#FF5722"
                    android:backgroundTint="@color/back_button_background"
                    app:rippleColor="#33FF5722"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:contentDescription="@string/clear_shopping_cart" />
            </LinearLayout>

            <!-- Main Input Card - Responsive width -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/input_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="1dp"
                app:strokeColor="@color/main_palette_old_lavender_variant"
                app:layout_constraintWidth_percent="@dimen/card_width_percent"
                app:layout_constraintTop_toBottomOf="@id/top_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <!-- Header with icon - Responsive sizing -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/margin_medium">

                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:src="@drawable/shoop_update_shopping_list"
                            android:contentDescription="@string/update_shopping_list" />

                        <TextView
                            android:id="@+id/main_shopping_list_header"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/main_shopping_list"
                            android:textSize="@dimen/text_large"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="@dimen/margin_small"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="14sp"
                            android:autoSizeMaxTextSize="20sp"
                            android:maxLines="2" />
                    </LinearLayout>

                    <!-- Enhanced text input with responsive dimensions -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/shopping_list_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_medium"
                        app:boxStrokeColor="@color/main_palette_old_lavender_variant"
                        app:hintTextColor="@color/main_palette_old_lavender_variant"
                        app:startIconDrawable="@drawable/ic_product"
                        app:startIconTint="@null"
                        app:counterEnabled="true"
                        app:counterMaxLength="2000"
                        app:helperText="@string/shopping_list_input_help"
                        app:helperTextTextColor="@color/main_palette_old_lavender_variant"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/main_shopping_list_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/shopping_list_input_hint"
                            android:inputType="textMultiLine|textCapSentences"
                            android:gravity="top"
                            android:minHeight="@dimen/input_min_height"
                            android:maxHeight="@dimen/input_max_height"
                            android:minLines="3"
                            android:maxLines="8"
                            android:scrollbars="vertical"
                            android:textSize="@dimen/text_medium"
                            android:lineSpacingExtra="4dp"
                            android:padding="@dimen/margin_small" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Action button with responsive sizing and auto-sizing text -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/convert_to_product_track_IB"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:text="@string/convert_to_product_track"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="bold"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/button_text_min"
                        android:autoSizeMaxTextSize="@dimen/button_text_max"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_convert_product_track"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconSize="@dimen/icon_size_small"
                        android:backgroundTint="@color/main_palette_old_lavender_variant"
                        android:textColor="@color/white"
                        app:iconTint="@color/white"
                        app:rippleColor="@color/white" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Products List Card with responsive sizing -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/products_list_card"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="1dp"
                app:strokeColor="@color/main_palette_old_lavender_variant"
                app:layout_constraintWidth_percent="@dimen/card_width_percent"
                app:layout_constraintTop_toBottomOf="@id/input_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- List Header with responsive spacing -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/card_padding"
                        android:paddingBottom="@dimen/margin_small"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/icon_size_small"
                            android:layout_height="@dimen/icon_size_small"
                            android:src="@drawable/shoopt_track_shopping"
                            app:tint="@color/main_palette_old_lavender_variant"
                            android:contentDescription="@string/product_list" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/converted_products_list"
                            android:textSize="@dimen/text_large"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="@dimen/margin_small"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="14sp"
                            android:autoSizeMaxTextSize="20sp"
                            android:maxLines="2" />

                        <!-- Item count badge -->
                        <TextView
                            android:id="@+id/product_count_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/product_count_zero"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_small"
                            android:textStyle="bold"
                            android:background="@drawable/pill_background"
                            android:backgroundTint="@color/main_palette_old_lavender_variant"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:minWidth="24dp"
                            android:gravity="center"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="14sp" />

                        <!-- Fullscreen Zoom Button with responsive sizing -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/fullscreen_zoom_button"
                            android:layout_width="@dimen/action_button_size"
                            android:layout_height="@dimen/action_button_size"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:insetLeft="0dp"
                            android:insetRight="0dp"
                            app:icon="@drawable/ic_fullscreen"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconSize="@dimen/icon_size_small"
                            app:cornerRadius="16dp"
                            android:backgroundTint="@android:color/transparent"
                            app:iconTint="@color/main_palette_old_lavender_variant"
                            app:rippleColor="@color/main_palette_old_lavender_variant"
                            android:alpha="0.8"
                            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                            android:contentDescription="@string/expand_to_fullscreen"
                            android:tooltipText="@string/expand_products_list" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/main_palette_old_lavender_variant"
                        android:alpha="0.3"
                        android:layout_marginHorizontal="@dimen/card_padding" />

                    <!-- Products RecyclerView with better padding -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/product_track_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_medium"
                        android:clipToPadding="false"
                        android:overScrollMode="never"
                        android:scrollbars="none" />

                    <!-- Empty State with responsive spacing -->
                    <LinearLayout
                        android:id="@+id/empty_state_container"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/margin_xlarge"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/shoopt_add_product"
                            android:alpha="0.6"
                            app:tint="@color/main_palette_old_lavender_variant"
                            android:contentDescription="@string/empty_list" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no_products_converted"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/main_palette_old_lavender_variant"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="14sp"
                            android:autoSizeMaxTextSize="20sp"
                            android:maxLines="2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_products_to_see_them_here"
                            android:textSize="@dimen/text_medium"
                            android:textColor="@color/main_palette_old_lavender_variant"
                            android:alpha="0.8"
                            android:layout_marginTop="@dimen/margin_small"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeMaxTextSize="16sp"
                            android:maxLines="3" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Fixed Floating Action Button with responsive positioning -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/paste_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_bottom_margin"
        android:text="@string/paste_list"
        android:textAllCaps="false"
        android:textSize="@dimen/text_small"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="@dimen/button_text_min"
        android:autoSizeMaxTextSize="@dimen/button_text_max"
        app:icon="@drawable/ic_paste"
        app:iconTint="@color/white"
        android:backgroundTint="@color/main_palette_old_lavender_variant"
        android:textColor="@color/white"
        app:rippleColor="@color/white"
        android:contentDescription="@string/paste_shopping_list"
        android:elevation="8dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
