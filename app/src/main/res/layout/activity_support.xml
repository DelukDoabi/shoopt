<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="?backgroundColor">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/card_background_rounded"
        android:elevation="4dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageButton
                    android:id="@+id/support_back_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/shoopt_back"
                    android:contentDescription="@string/back"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/support_shoopt"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/support_description"
                android:textAppearance="?attr/textAppearanceBody1"
                android:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/support_btn_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_rounded_button"
                android:minHeight="48dp"
                android:padding="12dp"
                android:text="@string/support_btn_label_1"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/support_btn_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_rounded_button"
                android:minHeight="48dp"
                android:padding="12dp"
                android:text="@string/support_btn_label_3"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/support_btn_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_rounded_button"
                android:minHeight="48dp"
                android:padding="12dp"
                android:text="@string/support_btn_label_5"
                android:layout_marginBottom="4dp" />

        </LinearLayout>

    </FrameLayout>

</ScrollView>
