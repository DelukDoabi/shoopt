<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradient_background"
    android:fitsSystemWindows="true"
    tools:context=".activities.MainActivity">

    <!-- En-tête avec logo et nom de l'app avec marge de sécurité pour la barre d'état -->
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/loading_logo_animation"
        android:contentDescription="@string/app_name"
        android:layout_marginTop="@dimen/margin_xlarge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/app_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/app_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Boutons de paramètres et déconnexion en haut à droite avec marge de sécurité -->
    <LinearLayout
        android:id="@+id/top_buttons_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/settings_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="12dp"
            app:icon="@drawable/ic_settings"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="24dp"
            app:cornerRadius="21dp"
            app:strokeColor="@color/back_button_stroke"
            app:strokeWidth="1dp"
            app:iconTint="@color/back_button_icon"
            android:backgroundTint="@color/back_button_background"
            app:rippleColor="@color/back_button_ripple"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:contentDescription="@string/settings" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/logout_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:icon="@drawable/ic_logout"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="24dp"
            app:cornerRadius="21dp"
            app:strokeColor="@color/back_button_stroke"
            app:strokeWidth="1dp"
            app:iconTint="@color/back_button_icon"
            android:backgroundTint="@color/back_button_background"
            app:rippleColor="@color/back_button_ripple"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:contentDescription="@string/logout" />
    </LinearLayout>

    <!-- Grille de fonctionnalités principales -->
    <LinearLayout
        android:id="@+id/features_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/app_name_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Première ligne -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Mise à jour liste de courses -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/shopping_list_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageButton
                        android:id="@+id/shopping_list_IB"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/shoop_update_shopping_list"
                        android:background="@drawable/main_rounded_button"
                        android:contentDescription="@string/update_shopping_list"
                        android:padding="12dp" />

                    <TextView
                        android:id="@+id/update_shopping_list_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/update_shopping_list"
                        android:textStyle="bold"
                        android:textAlignment="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Ajouter ou mettre à jour un produit -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/add_product_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageButton
                        android:id="@+id/add_or_update_product_IB"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/shoopt_add_update_product"
                        android:background="@drawable/main_rounded_button"
                        android:contentDescription="@string/add_or_update_product"
                        android:padding="12dp" />

                    <TextView
                        android:id="@+id/save_product_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/add_or_update_product"
                        android:textStyle="bold"
                        android:textAlignment="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Deuxième ligne -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="16dp">

            <!-- Suivi des achats -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/track_shopping_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageButton
                        android:id="@+id/track_shopping_IB"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/shoopt_track_shopping"
                        android:background="@drawable/main_rounded_button"
                        android:contentDescription="@string/track_shopping"
                        android:padding="12dp" />

                    <TextView
                        android:id="@+id/track_shopping_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/track_shopping"
                        android:textStyle="bold"
                        android:textAlignment="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Analyser -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/analyse_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageButton
                        android:id="@+id/analyse_IB"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/shoopt_analyse"
                        android:background="@drawable/main_rounded_button"
                        android:contentDescription="@string/analyse"
                        android:padding="12dp" />

                    <TextView
                        android:id="@+id/analyse_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/analyse"
                        android:textStyle="bold"
                        android:textAlignment="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
