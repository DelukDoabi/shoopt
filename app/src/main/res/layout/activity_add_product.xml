<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.AddProductActivity">

    <!-- Background gradient - même fond que les autres écrans -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_gradient_background" />

    <!-- Main responsive constraint layout with scroll capability for small screens -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/screen_padding">

            <!-- Top Bar with back button - similar to main screen top buttons -->
            <LinearLayout
                android:id="@+id/top_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_large"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/back_IB"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    app:icon="@drawable/shoopt_back"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="24dp"
                    app:cornerRadius="21dp"
                    app:strokeColor="#6E6268"
                    app:strokeWidth="1dp"
                    app:iconTint="#6E6268"
                    android:backgroundTint="#33FFFFFF"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:contentDescription="@string/back" />

                <TextView
                    android:id="@+id/screen_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/add_or_update_product"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_xlarge"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginHorizontal="16dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="16sp"
                    android:autoSizeMaxTextSize="24sp" />

                <!-- Placeholder for symmetry -->
                <View
                    android:layout_width="42dp"
                    android:layout_height="42dp" />
            </LinearLayout>

            <!-- Product image section - made twice as big -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/product_image_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_medium"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/main_palette_old_lavender_variant"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintWidth_max="280dp"
                app:layout_constraintTop_toBottomOf="@id/top_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageButton
                    android:id="@+id/product_picture_IB"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:background="@null"
                    android:contentDescription="@string/take_picture"
                    android:src="@drawable/shoopt_add_picture"
                    android:adjustViewBounds="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/camera_overlay_gradient"
                    android:alpha="0.3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/take_picture"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/pill_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textSize="11sp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="8dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="9sp"
                    android:autoSizeMaxTextSize="11sp"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Main form card - consistent with login/register card style with proper margins -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/product_form_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_large"
                android:layout_marginHorizontal="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:layout_constraintWidth_percent="@dimen/card_width_percent"
                app:layout_constraintWidth_max="600dp"
                app:layout_constraintTop_toBottomOf="@id/product_image_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_padding">

                    <!-- Barcode input with scan button -->
                    <LinearLayout
                        android:id="@+id/barcode_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/barcode_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:boxStrokeColor="@color/main_palette_old_lavender_variant"
                            app:hintTextColor="@color/main_palette_old_lavender_variant"
                            app:startIconDrawable="@drawable/ic_barcode"
                            app:startIconTint="@color/main_palette_old_lavender_variant"
                            app:hintAnimationEnabled="true"
                            app:expandedHintEnabled="true"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/product_barcode_ET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/insert_product_barcode"
                                android:inputType="number"
                                android:minHeight="48dp"
                                android:textSize="16sp"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="14sp"
                                android:autoSizeMaxTextSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/scan_barcode_IB"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:icon="@drawable/shoopt_scan_barcode"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconSize="20dp"
                            app:iconTint="@color/main_palette_old_lavender_variant"
                            app:cornerRadius="24dp"
                            app:strokeColor="@color/main_palette_old_lavender_variant"
                            app:strokeWidth="1dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:contentDescription="@string/scan_barcode"/>
                    </LinearLayout>

                    <!-- Product name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/name_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:boxStrokeColor="@color/main_palette_old_lavender_variant"
                        app:hintTextColor="@color/main_palette_old_lavender_variant"
                        app:startIconDrawable="@drawable/ic_product"
                        app:startIconTint="@color/main_palette_old_lavender_variant"
                        app:hintAnimationEnabled="true"
                        app:expandedHintEnabled="true"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        app:layout_constraintTop_toBottomOf="@id/barcode_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/product_name_ET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/insert_product_name"
                            android:inputType="text"
                            android:minHeight="48dp"
                            android:textSize="16sp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="14sp"
                            android:autoSizeMaxTextSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Price inputs - responsive layout with proper constraints -->
                    <LinearLayout
                        android:id="@+id/price_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:baselineAligned="false"
                        app:layout_constraintTop_toBottomOf="@id/name_layout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/price_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            app:boxStrokeColor="@color/main_palette_old_lavender_variant"
                            app:hintTextColor="@color/main_palette_old_lavender_variant"
                            app:startIconDrawable="@drawable/ic_price"
                            app:startIconTint="@color/main_palette_old_lavender_variant"
                            app:hintAnimationEnabled="true"
                            app:expandedHintEnabled="true"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/product_price_ET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/insert_product_price"
                                android:inputType="numberDecimal"
                                android:minHeight="48dp"
                                android:textSize="16sp"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="14sp"
                                android:autoSizeMaxTextSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/unit_price_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            app:boxStrokeColor="@color/main_palette_old_lavender_variant"
                            app:hintTextColor="@color/main_palette_old_lavender_variant"
                            app:startIconDrawable="@drawable/ic_price_unit"
                            app:startIconTint="@color/main_palette_old_lavender_variant"
                            app:hintAnimationEnabled="true"
                            app:expandedHintEnabled="true"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/product_unit_price_ET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/insert_product_unit_price"
                                android:inputType="numberDecimal"
                                android:minHeight="48dp"
                                android:textSize="16sp"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="14sp"
                                android:autoSizeMaxTextSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Shop selection -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/shop_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:boxStrokeColor="@color/main_palette_old_lavender_variant"
                        app:hintTextColor="@color/main_palette_old_lavender_variant"
                        app:startIconDrawable="@drawable/ic_shop"
                        app:startIconTint="@color/main_palette_old_lavender_variant"
                        app:hintAnimationEnabled="true"
                        app:expandedHintEnabled="true"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        app:layout_constraintTop_toBottomOf="@id/price_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <AutoCompleteTextView
                            android:id="@+id/shop_autocomplete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/insert_product_shop"
                            android:inputType="text"
                            android:completionThreshold="1"
                            android:minHeight="48dp"
                            android:textSize="16sp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="14sp"
                            android:autoSizeMaxTextSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Enhanced tips section with full text visibility -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/tips_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#1A000000"
                        app:strokeColor="@color/main_palette_old_lavender_variant"
                        app:strokeWidth="1dp"
                        android:alpha="0.9"
                        app:layout_constraintTop_toBottomOf="@id/shop_layout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/tips_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/product_add_tips"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:padding="12dp"
                            app:drawableStartCompat="@drawable/ic_tip"
                            android:drawablePadding="8dp"
                            app:drawableTint="@color/main_palette_old_lavender_variant"
                            android:gravity="start|center_vertical"
                            android:lineSpacingExtra="2dp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="12sp"/>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Save button - consistent with login/register button style -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/save_product_IB"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:text="@string/save_product"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_medium"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/shoopt_save_product"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconSize="18dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintWidth_percent="0.85"
                        app:layout_constraintTop_toBottomOf="@id/tips_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="14sp"
                        android:autoSizeMaxTextSize="16sp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
