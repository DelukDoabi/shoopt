<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.AddProductActivity">

    <!-- Background gradient - même fond que les autres écrans -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_gradient_background" />

    <!-- Main responsive constraint layout with scroll capability for small screens -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/global_add_or_update_product_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:scrollbarStyle="insideOverlay">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/screen_padding"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_medium"
            android:minHeight="@dimen/input_min_height">

            <!-- Top Bar with back button - Responsive sizing -->
            <LinearLayout
                android:id="@+id/top_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_large"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/back_IB"
                    android:layout_width="@dimen/back_button_size"
                    android:layout_height="@dimen/back_button_size"
                    app:icon="@drawable/shoopt_back"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="@dimen/icon_size_medium"
                    app:cornerRadius="21dp"
                    app:strokeColor="#6E6268"
                    app:strokeWidth="1dp"
                    app:iconTint="#6E6268"
                    android:backgroundTint="#33FFFFFF"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:contentDescription="@string/back" />

                <TextView
                    android:id="@+id/screen_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/add_or_update_product"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_xlarge"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginHorizontal="@dimen/margin_medium"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="@dimen/title_text_min"
                    android:autoSizeMaxTextSize="@dimen/title_text_max"
                    android:maxLines="2" />

                <!-- Placeholder for symmetry - Responsive sizing -->
                <View
                    android:layout_width="@dimen/back_button_size"
                    android:layout_height="@dimen/back_button_size" />
            </LinearLayout>

            <!-- Product image section - Optimized sizing for better fit -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/product_image_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_small"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/main_palette_old_lavender_variant"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.6"
                app:layout_constraintWidth_max="200dp"
                app:layout_constraintWidth_min="150dp"
                app:layout_constraintTop_toBottomOf="@id/top_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageButton
                    android:id="@+id/product_picture_IB"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:background="@null"
                    android:contentDescription="@string/take_picture"
                    android:src="@drawable/shoopt_add_picture"
                    android:adjustViewBounds="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/camera_overlay_gradient"
                    android:alpha="0.3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/take_picture"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/pill_background"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:textSize="@dimen/text_small"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="6dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeMaxTextSize="12sp"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Main form card - Optimized for better screen fit -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/product_form_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginHorizontal="4dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:layout_constraintWidth_percent="@dimen/card_width_percent"
                app:layout_constraintWidth_max="600dp"
                app:layout_constraintTop_toBottomOf="@id/product_image_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_padding">

                    <!-- Barcode input with scan button - Compact sizing -->
                    <LinearLayout
                        android:id="@+id/barcode_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/barcode_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            app:boxStrokeColor="@color/main_palette_old_lavender_variant"
                            app:hintTextColor="@color/main_palette_old_lavender_variant"
                            app:startIconDrawable="@drawable/ic_barcode"
                            app:startIconTint="@color/main_palette_old_lavender_variant"
                            app:hintAnimationEnabled="true"
                            app:expandedHintEnabled="true"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/product_barcode_ET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/insert_product_barcode"
                                android:inputType="number"
                                android:minHeight="44dp"
                                android:textSize="@dimen/text_medium"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="@dimen/button_text_min"
                                android:autoSizeMaxTextSize="@dimen/button_text_max" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/scan_barcode_IB"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            app:icon="@drawable/shoopt_scan_barcode"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconSize="@dimen/icon_size_small"
                            app:iconTint="@color/main_palette_old_lavender_variant"
                            app:cornerRadius="22dp"
                            app:strokeColor="@color/main_palette_old_lavender_variant"
                            app:strokeWidth="1dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:contentDescription="@string/scan_barcode"/>
                    </LinearLayout>

                    <!-- Product name - Compact sizing -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/name_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:boxStrokeColor="@color/main_palette_old_lavender_variant"
                        app:hintTextColor="@color/main_palette_old_lavender_variant"
                        app:startIconDrawable="@drawable/ic_product"
                        app:startIconTint="@color/main_palette_old_lavender_variant"
                        app:hintAnimationEnabled="true"
                        app:expandedHintEnabled="true"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        app:layout_constraintTop_toBottomOf="@id/barcode_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/product_name_ET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/insert_product_name"
                            android:inputType="text"
                            android:minHeight="44dp"
                            android:textSize="@dimen/text_medium"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/button_text_min"
                            android:autoSizeMaxTextSize="@dimen/button_text_max" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Price inputs - Compact layout -->
                    <LinearLayout
                        android:id="@+id/price_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:baselineAligned="false"
                        app:layout_constraintTop_toBottomOf="@id/name_layout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/price_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="3dp"
                            app:boxStrokeColor="@color/main_palette_old_lavender_variant"
                            app:hintTextColor="@color/main_palette_old_lavender_variant"
                            app:startIconDrawable="@drawable/ic_price"
                            app:startIconTint="@color/main_palette_old_lavender_variant"
                            app:hintAnimationEnabled="true"
                            app:expandedHintEnabled="true"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/product_price_ET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/insert_product_price"
                                android:inputType="numberDecimal"
                                android:minHeight="44dp"
                                android:textSize="@dimen/text_medium"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="@dimen/button_text_min"
                                android:autoSizeMaxTextSize="@dimen/button_text_max" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/unit_price_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="3dp"
                            app:boxStrokeColor="@color/main_palette_old_lavender_variant"
                            app:hintTextColor="@color/main_palette_old_lavender_variant"
                            app:startIconDrawable="@drawable/ic_price_unit"
                            app:startIconTint="@color/main_palette_old_lavender_variant"
                            app:hintAnimationEnabled="true"
                            app:expandedHintEnabled="true"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/product_unit_price_ET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/insert_product_unit_price"
                                android:inputType="numberDecimal"
                                android:minHeight="44dp"
                                android:textSize="@dimen/text_medium"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="@dimen/button_text_min"
                                android:autoSizeMaxTextSize="@dimen/button_text_max" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Shop selection - Compact sizing -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/shop_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:boxStrokeColor="@color/main_palette_old_lavender_variant"
                        app:hintTextColor="@color/main_palette_old_lavender_variant"
                        app:startIconDrawable="@drawable/ic_shop"
                        app:startIconTint="@color/main_palette_old_lavender_variant"
                        app:hintAnimationEnabled="true"
                        app:expandedHintEnabled="true"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        app:layout_constraintTop_toBottomOf="@id/price_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <AutoCompleteTextView
                            android:id="@+id/shop_autocomplete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/insert_product_shop"
                            android:inputType="text"
                            android:completionThreshold="1"
                            android:minHeight="44dp"
                            android:textSize="@dimen/text_medium"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/button_text_min"
                            android:autoSizeMaxTextSize="@dimen/button_text_max" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Enhanced tips section - Compact sizing -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/tips_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#1A000000"
                        app:strokeColor="@color/main_palette_old_lavender_variant"
                        app:strokeWidth="1dp"
                        android:alpha="0.9"
                        app:layout_constraintTop_toBottomOf="@id/shop_layout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/tips_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/product_add_tips"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_small"
                            android:padding="8dp"
                            app:drawableStartCompat="@drawable/ic_tip"
                            android:drawablePadding="6dp"
                            app:drawableTint="@color/main_palette_old_lavender_variant"
                            android:gravity="start|center_vertical"
                            android:lineSpacingExtra="1dp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="9sp"
                            android:autoSizeMaxTextSize="12sp"/>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Save button - Compact sizing -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/save_product_IB"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:text="@string/save_product"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="bold"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/button_text_min"
                        android:autoSizeMaxTextSize="@dimen/button_text_max"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/shoopt_save_product"
                        app:iconGravity="textStart"
                        app:iconPadding="6dp"
                        app:iconSize="@dimen/icon_size_small"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_marginBottom="4dp"
                        app:layout_constraintWidth_percent="@dimen/button_width_percent"
                        app:layout_constraintTop_toBottomOf="@id/tips_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
