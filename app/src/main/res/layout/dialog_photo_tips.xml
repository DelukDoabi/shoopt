<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:id="@+id/photo_tips_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/shoopt_add_picture"
        app:tint="@color/main_palette_old_lavender_variant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/photo_tips_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/photo_tips_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/main_palette_old_lavender_variant"
        app:layout_constraintStart_toEndOf="@id/photo_tips_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/photo_tips_icon"
        app:layout_constraintBottom_toBottomOf="@id/photo_tips_icon" />

    <TextView
        android:id="@+id/photo_tips_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/photo_tips_message"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/photo_tips_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/dont_show_again_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/dont_show_again"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/photo_tips_message"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/continue_to_camera"
        android:textAllCaps="false"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/dont_show_again_checkbox"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
