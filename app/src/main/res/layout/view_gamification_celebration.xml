<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/celebration_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- Bouton de fermeture -->
    <ImageView
        android:id="@+id/close_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp" />

    <!-- Icône de l'achievement -->
    <ImageView
        android:id="@+id/achievement_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_celebration"
        android:scaleType="fitCenter" />

    <!-- Titre de l'achievement -->
    <TextView
        android:id="@+id/achievement_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Achievement Unlocked!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center" />

    <!-- Description -->
    <TextView
        android:id="@+id/achievement_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Description de l'achievement"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center" />

    <!-- Récompense XP -->
    <TextView
        android:id="@+id/xp_reward_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="+100 XP"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:background="@drawable/bg_xp_reward"
        android:padding="8dp" />

    <!-- Niveau actuel -->
    <TextView
        android:id="@+id/level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Niveau 1 - Débutant"
        android:textSize="14sp"
        android:textColor="@android:color/black" />

    <!-- Barre de progression XP -->
    <ProgressBar
        android:id="@+id/xp_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:max="100"
        android:progress="25" />

    <!-- Texte de progression XP -->
    <TextView
        android:id="@+id/xp_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="25% XP"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray" />

</LinearLayout>
