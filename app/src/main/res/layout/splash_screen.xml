<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient_background"
    app:layoutDescription="@xml/splash_screen_scene">

    <View
        android:id="@+id/logo_background_circle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/splash_logo_background"
        android:elevation="4dp"
        app:layout_constraintWidth_percent="0.42"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toTopOf="@+id/app_name_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_launcher_foreground"
        android:elevation="6dp"
        android:padding="16dp"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="@id/logo_background_circle"
        app:layout_constraintEnd_toEndOf="@id/logo_background_circle"
        app:layout_constraintStart_toStartOf="@id/logo_background_circle"
        app:layout_constraintTop_toTopOf="@id/logo_background_circle"
        android:contentDescription="Shoopt logo"/>

    <TextView
        android:id="@+id/app_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shoopt"
        android:textColor="@color/main_palette_old_lavender"
        android:textSize="48sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-medium"
        android:shadowColor="#40000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintBottom_toTopOf="@+id/app_tagline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_background_circle" />

    <TextView
        android:id="@+id/app_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Shopping Optimizer"
        android:textColor="@color/main_palette_old_lavender_variant"
        android:textSize="18sp"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/tagline_background"
        android:elevation="2dp"
        app:layout_constraintBottom_toTopOf="@+id/shoopt_version_TV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_name_text" />

    <TextView
        android:id="@+id/shoopt_version_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version: 0.0.0"
        android:textColor="@color/main_palette_nickel"
        android:textSize="12sp"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_tagline"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.motion.widget.MotionLayout>
